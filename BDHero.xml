<project>
    <shortName>BDHero</shortName>
    <fullName>BDHero</fullName>
    <version>0.5.0.0</version>
    <logoImage>Assets/Icons/bdhero_gui_48.png</logoImage>
    <componentList>
        <component>
            <name>programfiles</name>
            <description>Program Files</description>
            <canBeEdited>0</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>Setup/ProgramFiles/bdhero-cli.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>Setup/ProgramFiles/BDHero.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>Setup/ProgramFiles/BDInfo.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>Setup/ProgramFiles/DotNetUtils.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>Setup/ProgramFiles/I18N.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>Setup/ProgramFiles/log4net.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>Setup/ProgramFiles/Newtonsoft.Json.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>Setup/ProgramFiles/ProcessUtils.dll</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfilesosx</name>
                    <platforms>osx</platforms>
                </folder>
                <folder>
                    <description>Config</description>
                    <destination>${windows_folder_appdata}/BDHero</destination>
                    <name>configfolder</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>Setup/ProgramFiles/Config</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>BDHero Command Line Interface</comment>
                    <name>BDHero CLI</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/bdhero-cli.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
        <componentGroup>
            <name>requiredplugins</name>
            <description>Required Plugins</description>
            <canBeEdited>0</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <componentList>
                <component>
                    <name>discreaderplugin</name>
                    <description>Disc Reader</description>
                    <canBeEdited>0</canBeEdited>
                    <selected>1</selected>
                    <show>1</show>
                    <folderList>
                        <folder>
                            <description>Disc Reader</description>
                            <destination>${windows_folder_appdata}/BDHero/Plugins/Required</destination>
                            <name>discreaderfolder</name>
                            <platforms>windows</platforms>
                            <distributionFileList>
                                <distributionDirectory>
                                    <origin>Setup/ProgramFiles/Plugins/Required/DiscReader</origin>
                                </distributionDirectory>
                            </distributionFileList>
                        </folder>
                    </folderList>
                </component>
                <component>
                    <name>tmdbplugin</name>
                    <description>TMDb</description>
                    <canBeEdited>0</canBeEdited>
                    <selected>1</selected>
                    <show>1</show>
                    <folderList>
                        <folder>
                            <description>TMDb</description>
                            <destination>${windows_folder_appdata}/BDHero/Plugins/Required</destination>
                            <name>tmdbfolder</name>
                            <platforms>windows</platforms>
                            <distributionFileList>
                                <distributionDirectory>
                                    <origin>Setup/ProgramFiles/Plugins/Required/Tmdb</origin>
                                </distributionDirectory>
                            </distributionFileList>
                        </folder>
                    </folderList>
                </component>
                <component>
                    <name>autodetectorplugin</name>
                    <description>Auto Detector</description>
                    <canBeEdited>0</canBeEdited>
                    <selected>1</selected>
                    <show>1</show>
                    <folderList>
                        <folder>
                            <description>Auto Detector</description>
                            <destination>${windows_folder_appdata}/BDHero/Plugins/Required</destination>
                            <name>autodetectorfolder</name>
                            <platforms>windows</platforms>
                            <distributionFileList>
                                <distributionDirectory>
                                    <origin>Setup/ProgramFiles/Plugins/Required/AutoDetector</origin>
                                </distributionDirectory>
                            </distributionFileList>
                        </folder>
                    </folderList>
                </component>
                <component>
                    <name>filenamerplugin</name>
                    <description>File Namer</description>
                    <canBeEdited>0</canBeEdited>
                    <selected>1</selected>
                    <show>1</show>
                    <folderList>
                        <folder>
                            <description>File Namer</description>
                            <destination>${windows_folder_appdata}/BDHero/Plugins/Required</destination>
                            <name>filenamerfolder</name>
                            <platforms>windows</platforms>
                            <distributionFileList>
                                <distributionDirectory>
                                    <origin>Setup/ProgramFiles/Plugins/Required/FileNamer</origin>
                                </distributionDirectory>
                            </distributionFileList>
                        </folder>
                    </folderList>
                </component>
                <component>
                    <name>chaptergrabberplugin</name>
                    <description>Chapter Grabber</description>
                    <canBeEdited>1</canBeEdited>
                    <selected>1</selected>
                    <show>1</show>
                    <folderList>
                        <folder>
                            <description>Chapter Grabber</description>
                            <destination>${windows_folder_appdata}/BDHero/Plugins/Required</destination>
                            <name>chaptergrabberplugin</name>
                            <platforms>windows</platforms>
                            <distributionFileList>
                                <distributionDirectory>
                                    <origin>Setup/ProgramFiles/Plugins/Required/ChapterGrabber</origin>
                                </distributionDirectory>
                            </distributionFileList>
                        </folder>
                    </folderList>
                </component>
                <component>
                    <name>ffmpegmuxerplugin</name>
                    <description>FFmpeg Muxer</description>
                    <canBeEdited>0</canBeEdited>
                    <selected>1</selected>
                    <show>1</show>
                    <folderList>
                        <folder>
                            <description>FFmpeg Muxer</description>
                            <destination>${windows_folder_appdata}/BDHero/Plugins/Required</destination>
                            <name>ffmpegmuxerfolder</name>
                            <platforms>windows</platforms>
                            <distributionFileList>
                                <distributionDirectory>
                                    <origin>Setup/ProgramFiles/Plugins/Required/FFmpegMuxer</origin>
                                </distributionDirectory>
                            </distributionFileList>
                        </folder>
                    </folderList>
                </component>
            </componentList>
        </componentGroup>
    </componentList>
    <postBuildActionList>
        <zip>
            <baseDirectory>C:/Projects/bdhero/Setup/ProgramFiles</baseDirectory>
            <excludeFiles>*/Logs</excludeFiles>
            <files>C:/Projects/bdhero/Setup/ProgramFiles/*</files>
            <zipFile>C:/Projects/bdhero/Setup/${product_shortname}-${product_version}-${platform_name}-portable.zip</zipFile>
        </zip>
    </postBuildActionList>
    <disableSplashScreen>1</disableSplashScreen>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <outputDirectory>Setup</outputDirectory>
    <productDisplayIcon>${installdir}/bdhero-cli.exe</productDisplayIcon>
    <productUrlHelpLink>https://github.com/bdhero/bdhero</productUrlHelpLink>
    <productUrlInfoAbout>https://github.com/bdhero/bdhero/issues</productUrlInfoAbout>
    <saveRelativePaths>1</saveRelativePaths>
    <singleInstanceCheck>1</singleInstanceCheck>
    <vendor>BDHero</vendor>
    <windows64bitMode>1</windows64bitMode>
    <windowsExecutableIcon>Assets/Icons/bdhero_gui.ico</windowsExecutableIcon>
    <windowsResourceFileVersion>${product_version}</windowsResourceFileVersion>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_shortname}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>1</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
    </parameterList>
</project>

